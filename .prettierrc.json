{
  "semi": true,
  "tabWidth": 2,
  "printWidth": 100,
  "singleQuote": true,
  "trailingComma": "none",
  "jsxBracketSameLine": true,
  "importOrder": [
    "^react$",
    "^next$|^next/(.*)$",
    "<THIRD_PARTY_MODULES>",
    "^@styles/(.*)$",
    "^@/(.*)$",
    "^@actions/(.*)$",
    "^@libs/(.*)$",
    "^@utils/(.*)$",
    "^@hooks/(.*)$",
    "^@components/(.*)$",
    "^@messages/(.*)$",
    "^@configs/(.*)$",
    "^./([A-Za-z0-9]*)$",
    "^./_(.*)$",
    "[A-Za-z0-9]+.scss$",
    "^@assets/(.*)$"
  ],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true,
  "plugins": [
    "prettier-plugin-tailwindcss",
    "@trivago/prettier-plugin-sort-imports"
  ]
}
